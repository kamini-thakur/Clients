{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<article class="home-blog-post">
  <p class="home-blog-post-date">
    <a href="{{ url }}">
      {{ publishedAt }}
    </a>
  </p>

  <h4 class="home-blog-post-title">
    <a href="{{ url }}">
      {{ title }}
    </a>
  </h4>

  {%- if image -%}
    <a class="home-blog-post-image" href="{{ url }}">
      {{ image }}
    </a>
  {%- endif -%}

  <p class="home-blog-post-excerpt">{{ excerpt }}</p>

  <p class="home-blog-post-read-more">
    <a href="{{ url }}">{% comment %}ly_i18n_replace_for_[ 'blogs.article_item.read_more' | t ]_begin{% endcomment %}{% capture ly_template %}{{ 'blogs.article_item.read_more' | t }}{% endcapture %}{% include 'ly-static-string' with '6184054' %}{% if ly_translation %}{% assign escape_content = true %}{% assign ly_template = ly_translation %}{% else %}{% assign escape_content = false %}{% endif %}{% if escape_content %}{{ ly_template | escape}}{% else %}{{ ly_template }}{% endif %}{% comment %}ly_i18n_replace_end{% endcomment %}</a>
  </p>
</article>