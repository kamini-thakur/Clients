{% comment %}ly_global_begin{% endcomment %}{% include 'ly-global' %}{% comment %}ly_global_end{% endcomment %}<article class="collections-list-item {% if use_masonry %}masonry-grid-item{% endif %}" {% if use_masonry %}data-masonry-item{% endif %}>

  {% if collection-list-item == 'linklist' %}
    {% assign link_handle = link.handle %}
    {% assign collection = collections[link_handle] %}
  {% endif %}

  <figure class="thumbnail">
    <a href="{{ collection.url }}">
      {% if collection.image %}
        <img alt="{{ collection.image.alt | escape }}" src="{{ collection | img_url: '480x480' }}">
      {% elsif collection.products.first.featured_image %}
        <img alt="{% comment %}ly_code_replace_for_[ collection.title | escape ]_begin{% endcomment %}{% include 'ly-title' with collection %}{{ ly_translation | escape }}{% comment %}ly_code_replace_end{% endcomment %}" src="{{ collection.products.first | img_url: '480x480' }}">
      {% else %}
        {{ 'collection-1' | placeholder_svg_tag: 'placeholder-svg' }}
      {% endif %}
    </a>
  </figure>

  <h2 class="collection-title">
    <a href="{{ collection.url }}">{% comment %}ly_code_replace_for_[ collection.title ]_begin{% endcomment %}{% include 'ly-title' with collection %}{{ ly_translation }}{% comment %}ly_code_replace_end{% endcomment %}</a>
  </h2>

  {% if description and collection.description != blank %}
    <div class="collection-description rte">
      {% comment %}ly_code_replace_for_[ collection.description | strip_html ]_begin{% endcomment %}{% include 'ly-description' with collection %}{{ ly_translation | strip_html }}{% comment %}ly_code_replace_end{% endcomment %}
    </div>
  {% endif %}

</article>
